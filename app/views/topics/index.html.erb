<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %> 
            <% if logged_in? %>
              <% if !topic.favorite_users.include?(current_user) %>
                <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                  <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
                <% end %>
              <% else %>
                <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                  <%= image_tag 'icons/heart.png', class: 'topic-index-icon-on' %>
                <% end %>
              <% end %>
            <% else %>
                <%= link_to root_path, data: { confirm: 'いいねを押す事ができるのは会員様のみです。会員登録またはログインをしますか？' } do %>
                  <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
                <% end %>
            <% end %>
            <span>
              <%= topic.favorite_users.count %>
            </span>
            <% if logged_in? %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% else %>
                <%= link_to root_path, data: { confirm: 'コメントを残す事ができるのは会員様のみです。会員登録またはログインをしますか？' } do %>
                  <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
                <% end %>
            <% end %>
            <span>
              <%= topic.comments.count %>
            </span>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <p class="comment-text">コメント</p>
              <% topic.comments.each do |c| %>
                <p class="topic-text"><%= c.comment %></p>
                <% if logged_in? %>
                  <%= link_to comments_path(topic_id: topic.id), method: :delete , data: { confirm: '本当に削除しますか？' } do %>
                    <p class="topic-text">削除</p>
                  <% end %>
                <% end %>
              <% end %>
            <% if logged_in? %>
              <%= form_for @comment do |f| %>
                <div class="form-group">
                  <%= f.label :新しいコメントを投稿する %>
                  <%= f.text_field :comment, class: 'form-control' %>
                  <%= f.hidden_field :topic_id, value: topic.id %>
                </div>
                <%= f.submit "投稿する", class: 'btn btn-black2 btn-block' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>